@model HomeDetailsVM
    @{ 
        var filepath = "~/images/" + (Model.Employee.PhotoPath ?? "newImage.png");
        ViewBag.Title = "Employee Details";
    }
   <div class=" row justify-content-center">
       <div class=" col-sm-8">
           <div class="card">
               <div class="card-header">
                   <h1>@Model.Employee.Name</h1>
               </div>

               <div class="card-body text-center">
                   <img class="card-img-top imageThumbnail" src="@filepath" asp-append-version="true" />
                   <h4>Employee ID: @Model.Employee.Id</h4>
                   <h4>Employee Email: @Model.Employee.Email</h4>
                   <h4>Employee Department: @Model.Employee.Department</h4>
               </div>
               <div class="card-footer text-center">
                   <a class="btn btn-primary" asp-controller="home"asp-action="index">Back</a>
                   <a class="btn btn-primary"  asp-action="edit"asp-controller="home" asp-route-id="@Model.Employee.Id">Edit</a>
                   <a class="btn btn-danger" asp-controller="Home" asp-action="Delete">Delete</a>

               </div>
           </div>
       </div>
   </div> 
@section scripts{
<script src="~/js/CustomScript.js"></script>
}