@model HomeDetailsVM
    @{ 
        
        ViewBag.Title = "Employee Details";
    }
   <div class=" row justify-content-center">
       <div class=" col-sm-8">
           <div class="card">
               <div class="card-header">
                   <h1>@Model.Employee.Name</h1>
               </div>

               <div class="card-body text-center">
                   <img class="card-img-top" src="~/images/newImage.png" />
                   <h4>Employee ID: @Model.Employee.Id</h4>
                   <h4>Employee Email: @Model.Employee.Email</h4>
                   <h4>Employee Department: @Model.Employee.Department</h4>
               </div>
               <div class="card-footer text-center">
                   <a class="btn btn-primary" asp-controller="home"asp-action="index">Back</a>
                   <a class="btn btn-primary" href="#">Edit</a>
                   <a class="btn btn-danger" href="#">Delete</a>

               </div>
           </div>
       </div>
   </div> 
@section scripts{
<script src="~/js/CustomScript.js"></script>
}