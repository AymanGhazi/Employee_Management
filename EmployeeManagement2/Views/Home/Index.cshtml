@model IEnumerable<Employee>
@{
   
    ViewBag.Title = "Employee Information";
}
<div>
    @foreach (var Employee in Model)
    {
        <div class=" card n-3">
            <div class="card-header"> <h3> @Employee.Name</h3></div>
            <img class="card-img-top" src="~/images/newImage.png" asp-append-version="true" />
            <div class="  card-footer text-center" >
                <a asp-controller="home"asp-action="details"asp-route-id="@Employee.Id" class="btn btn-primary">ViewTagHelper</a>
              
                <a href="/home/details/@Employee.Id" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
  